                    <!--
                Some spans to act as a hamburger.
                
                They are acting like a real hamburger,
                not that McDonalds stuff.
                -->
                    <span></span>
                    <span></span>
                    <span></span>

                    <!--
                Too bad the menu has to be inside of the button
                but hey, it's pure CSS magic.
                -->
                    <ul id="menu">
                        <a href="#home">
                            <li>Home</li>
                        </a>
                        <a href="#features">
                            <li>features</li>
                        </a>
                        <a href="#testimonials">
                            <li>testimonials</li>
                        </a>
                        <a href="#tutorials">
                            <li>tutorials</li>
                        </a>
                        <a href="#contact">
                            <li>contact</li>
                        </a>
                    </ul>
                </div>
            </nav>
