    </head>

    <body>

        <nav id="navbar" class="desktopOnly">
            <ul>
                <li id="logo"><img src="/svg/logo.svg" alt=""></li>
                <span id="elements">

                    <li><a href="/#home">home</a></li>
                    <li><a href="/#features">features</a></li>
                    <li><a href="/#testimonials">testimonials</a></li>
                    <li><a href="/#tutorials">tutorials</a></li>
                    <li><a href="/contact">contact</a></li>
                </span>

                <span id="buttons">
                    <% if(!currentUser){ %>
                    <li><a class="button good" href="/login">sign in</a></li>
                    <li><a class="button secondary" href="/register">sign up</a></li>
                    <% } else{ %>
                    <% if(currentUser.premium){ %>
                    <li><a class="button good" href="/account"><%=currentUser.username%></a></li>
                    <% } else { %>
                    <li><a class="button good" href="/#pricing">Subscribe</a></li>
                    <% } %>
                    <li><a class="button secondary" href="/logout">log out</a></li>
                    <% } %>
                </span>

            </ul>
        </nav>
        <nav id="mobileNavbar">
            <!--    Made by Erik Terwan    -->
            <!--   24th of November 2015   -->
            <!--        MIT License        -->
            <nav role="navigation">
                <div id="menuToggle">
                    <!--
                A fake / hidden checkbox is used as click reciever,
                so you can use the :checked selector on it.
                -->
