<%- include('partials/header'); %>
<img src="svg/form.svg" class="bgIllustration" alt="">
<section id="form">
    <h3>Create a New Account</h3>
    <div class="wrapper box">
        <form action="/register" method="post" id="contactForm">
            <label for="username">username</label>
            <input type="text" name="name" required>
            <label for="email">email address</label>
            <input type="email" name="name" required>
            <label for="password">Password</label>
            <input type="password" name="password" pattern="(?=.*).{8,}"
                title="Must containt at least 8 or more characters" required>
            <button class="button primary">Register</button>
        </form>
    </div>
</section>
<%- include('partials/footer'); %>
