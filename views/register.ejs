<%- include('partials/header'); %>
<img src="svg/form.svg" class="bgIllustration" alt="">
<section id="form">
    <h3>Create a New Account</h3>
    <div class="wrapper box">
        <% if(err){ %>
        <p><%= err.message %> </p>
        <% } %>
        <form action="/register" method="post" id="contactForm">
            <label for="username">username</label>
            <input type="text" name="username" pattern="[a-zA-Z0-9]+"
                title="Your username can't have non-alphanumerical characters with no spaces" required>
            <label for="email">email address</label>
            <input type="email" name="email" required>
            <label for="password">Password</label>
            <input type="password" name="password" pattern="(?=.*).{8,}"
                title="Must contain at least 8 or more characters" required>
            <label for="referral">How did you hear about us?</label>
            <input type="text" name="referral" pattern="[a-zA-Z0-9]+"
                >

            <button class="button primary">Register</button>
            <p>Already Have An Account? <br><a href="/login">Sign In</a></p>
            <a href="/forgot">I don't remember my password</a>
        </form>
    </div>
</section>
<%- include('partials/footer'); %>
